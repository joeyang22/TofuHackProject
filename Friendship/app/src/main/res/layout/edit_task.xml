        android:layout_marginRight="20dp" >

        <!--android:layout_toRightOf="@+id/TitleLabel"-->
        <!--android:layout_toEndOf="@+id/TitleLabel">-->

        <requestFocus />
    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Submit"
        android:id="@+id/submitButton"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_marginLeft="79dp"
        android:layout_marginStart="79dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Cancel"
        android:id="@+id/cancelButton"
        android:layout_alignTop="@+id/submitButton"
        android:layout_toRightOf="@+id/submitButton"
        android:layout_toEndOf="@+id/submitButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Delete"
        android:id="@+id/deleteButton"
        android:layout_below="@+id/submitButton"
        android:layout_alignLeft="@+id/submitButton"
        android:layout_alignRight="@+id/cancelButton"
        android:layout_marginTop="0dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editPoints"
        android:layout_alignParentBottom="true"
